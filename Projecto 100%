#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>


#define  NC        200   //Numero máximo de clientes
#define  NA        400 //Numero máximo de animais
#define  NM        50  //Numero máximo de médicos
#define  NCO       1000 //Numero máximo de consultas
#define  NF        10   // Numero máximo de funcionarios


typedef struct{
int dia;
int mes;
int ano;
} datas;


typedef struct{
int cod_cliente;
char nome[20];
datas data_nasc;
char morada[100];
long int telf;
int estado;   // 1-Activo 0- Desactivo
} clientes;



typedef struct{
int n_medico;
char nome[50];
datas data_nasc;
char morada[100];
long int telf;
int estado; // 1-Activo 0- Desactivo
} medicos;

typedef struct{
int n_animal;
char nome[50];
datas data_nasc;
char tipo_animal[20];
char raca[50];
int estado; // 1-Activo 0- Desactivo
} animais;


typedef struct{
int hora;
int minutos;
} horas;

typedef struct {
char user[10];
char pass[12];
int estado; // 1-Activo 0-Desactivo             
             
}funcionarios;



typedef struct{
int n_consulta;
int n_cliente;
int n_animal;
int n_medico;
datas data;
horas hora;
char observacoes[100];
int estado; // 1-Activo 0-Desactivo
} consultas;


//Iniciação de variaveis
void inicializacao(clientes *cliente, medicos *medico, animais *animal, consultas *consulta, funcionarios *funcionario){
     int n;
     
     //Inicialização Clientes
     for(n=0;n<NC;n++){
                       cliente[n].cod_cliente=0;
                       cliente[n].estado=0;
                       
                      }
     //Inicialização Médicos                 
     for(n=0;n<NM;n++){                
                       medico[n].n_medico=0;
                       medico[n].estado=0;
                       }
     //Inicialização Animais                  
     for(n=0;n<NA;n++){
                       animal[n].n_animal=0;
                       animal[n].estado=0;
                       }
     // Inicialização Consultas
     for(n=0;n<NCO;n++){
                       consulta[n].n_consulta=0;
                       consulta[n].estado=0;
                       }
     //Inicilização Funcionarios/Contas de utilizador                  
     char admin[10]="admin";
     char password[12]="123456";
     strcpy(funcionario[0].user,admin);
     strcpy(funcionario[0].pass,password);
     funcionario[0].estado=1;
     for(n=1; n<=NF;n++){
              funcionario[n].estado=0;         
     }
                       
                       
                       printf("Variaveis inicializadas com sucesso!\n");
}


/********************************** MODULO FUNCIONARIOS // CONTAS DE UTILIZADORES ***************************************/


//ADICIONA FUNCIONARIO
adicionarfuncionario(funcionarios *funcionario){
system ("cls");
    int n;
    int flag=0;
    char admin[10];
    char pass[12];
    printf("                                   Adicionar Funcionario           \n\n\n");
    
    
    printf("Somente o administrador podera efectuar esta operacao!\n\n");
    fflush(stdin);
    printf("Admin: "); gets(admin); fflush(stdin);
    printf("\nPassword: "); gets(pass); fflush(stdin);
    if(!strcmp(funcionario[0].user,admin) && !strcmp(funcionario[0].pass,pass)) {
      for(n=0; n<NF;n++){
             if (funcionario[n].estado!=1){
                do{
                                printf("\n\nUser: "); gets(funcionario[n].user); fflush(stdin);
                                
                                if (funcionario[n].user[0]=='\0' || funcionario[n].user[0]==' ' || funcionario[n].user[0]=='\n' || 
                                    funcionario[n].user[1]=='\0' || funcionario[n].user[2]=='\0'||funcionario[n].user[3]=='\0'){
                                          flag=0;
                                          printf("User inválido! Pelo menos 4 caracteres!\n");
                                }else
                                          flag=1;
                } while(flag==0);
                do{
                                 printf("\nPassword: "); gets(funcionario[n].pass); fflush(stdin);
                                
                                if (funcionario[n].pass[0]=='\0' || funcionario[n].pass[0]==' ' || funcionario[n].pass[0]=='\n' 
                                || funcionario[n].pass[1]=='\0' || funcionario[n].pass[2]=='\0'|| funcionario[n].pass[3]=='\0' 
                                || funcionario[n].pass[4]=='\0' || funcionario[n].pass[5]=='\0' || funcionario[n].pass[6]=='\0'){
                                                 
                                                 flag=0;
                                                 printf("Password Inválida! Minimo de 7 caracteres!\n");
                                 }else{
                                                 flag=1;
                                 }                              
                } while(flag==0);  
               
                funcionario[n].estado=1;
                 n=NF;
               printf("Funcionario adicionado com sucesso!");
                getch();                     
          }
      } 
    }else{
      printf("Acesso negado!!");
      getch();
      }              
}

//ELIMINA FUNCIONARIO
void eliminarFuncionario(funcionarios *funcionario){
     
     system ("cls");
     char username[10];
     char admin[10];
     char password[12];
    int n;
    int flag=0;
    printf("                                   Eliminar Funcionario           \n\n\n");
    
    
    printf("Somente o administrador podera efectuar esta operacao!\n\n");
    fflush(stdin);
    printf("Admin: "); gets(admin);fflush(stdin);
    printf("\nPassword: "); gets(password);fflush(stdin);
    if(!strcmp(funcionario[0].user,admin) && !strcmp(funcionario[0].pass,password)) {
      printf("Qual o user que quer eliminar?"); gets(username);
                   for(n=1; n<NF;n++){
                            if(!strcmp(funcionario[n].user,username) && funcionario[n].estado==1){
                               funcionario[n].estado=0;
                               flag=1;
                               printf("User eliminado com sucesso!");
                               n=NF;
                            }
                            
                   }
       if(flag==0){
                   printf("User inválido!");
                   getch();
                   }
                               
    }else{
            printf("Acesso Negado!!");
            getch();
            }
                   
     
}

// LISTA FUNCIONARIOS

void listarFuncionarios(funcionarios *funcionario){
    int n;
    char admin[10];
    char password[12];
    
    system ("cls");
    printf("Somente o administrador podera efectuar esta operacao!\n\n");
    fflush(stdin);
    printf("Admin: "); gets(admin);fflush(stdin);
    printf("\nPassword: "); gets(password);fflush(stdin);
    if(!strcmp(funcionario[0].user,admin) && !strcmp(funcionario[0].pass,password)) {
      for(n=1; n<NF;n++){
             if (funcionario[n].estado==1){
               
                                printf("\n\nUser: %s",funcionario[n].user);
                                printf("\nPass: %s",funcionario[n].pass);
     
                                }
     }
} else
  printf("Acesso Negado");
  getch();
  
}



// ************************************************MODULO CLIENTES!!**********************************************

//Lista os clientes
void listarClientes(clientes *cliente){
     system ("cls");
     int n;
     int flag=0;
     for(n=0;n<NC;n++){
            if (cliente[n].estado==1){
                  printf("Cliente n. %d \n\n",cliente[n].cod_cliente);
                  printf("Nome: %s\n ",cliente[n].nome);
                  printf("Data de Nascimento: %d/%d/%d\n",
                  cliente[n].data_nasc.dia,
                  cliente[n].data_nasc.mes,
                  cliente[n].data_nasc.ano);
                  printf("Telefone: %ld\n",cliente[n].telf);
                  printf("Morada: %s\n\n",cliente[n].morada);  
                  flag=1;                   
                                       
             }          
                       
                       
         }if (flag==0)
                printf("Lista de Clientes vazia!");
         getch();
     
}


//Adiciona cliente
void adicionarCliente(clientes *cliente){

    system ("cls");
    int n;
    int flag=0;
    for(n=0; n<NC;n++){
             if (cliente[n].estado!=1){
                srand(time(NULL));
                cliente[n].cod_cliente=rand()%9999; // Numero gerado aleatoriamente
                printf("Cliente n. %d \n\n",cliente[n].cod_cliente);
                do{
                                fflush(stdin);
                                printf("Nome: "); gets(cliente[n].nome); fflush(stdin);
                                
                                if (cliente[n].nome[0]=='\0' || cliente[n].nome[0]==' ' || cliente[n].nome[0]=='\n'){
                                          flag=0;
                                          printf("Nome inválido!\n");
                                }else
                                          flag=1;
                } while(flag==0);
                do{
                                 printf("Data de Nascimento: \nDia: "); scanf("%d",&cliente[n].data_nasc.dia); fflush(stdin);
                                 printf("Mes: "); scanf("%d",&cliente[n].data_nasc.mes);fflush(stdin);
                                 printf("Ano: "); scanf("%d",&cliente[n].data_nasc.ano);fflush(stdin);
                                 if(cliente[n].data_nasc.dia>0 && cliente[n].data_nasc.dia<=31 && 
                                    cliente[n].data_nasc.mes>0 && cliente[n].data_nasc.mes<=12 && 
                                    cliente[n].data_nasc.ano>1850 && cliente[n].data_nasc.ano<=2000)
                                                 flag=1;
                                 else{
                                                 flag=0;
                                                 printf("Data de Nascimento Inválida!\n");
                                 }                              
                } while(flag==0);
                do{              fflush(stdin);
                                 printf("Telefone: "); scanf("%ld",&cliente[n].telf);  fflush(stdin);
                                 if(cliente[n].telf>900000000 && cliente[n].telf<999999999)
                                                flag=1;
                                 else{
                                                flag=0;
                                                printf("Número de Telf. inválido!\n");
                                 }
                } while(flag==0);
                fflush(stdin);
                printf("Morada: "); gets(cliente[n].morada);fflush(stdin);
                cliente[n].estado=1;
                system("cls");
                printf("Cliente n. %d inserido com sucesso!\n\n",cliente[n].cod_cliente );
                n=NC;
                flag=1;
                getch();
                }
             } if (flag==0){
                  printf("Número máximo de clientes atingido ou erro na introdução de novo cliente! Por favor contactar os serviços técnicos!");
                  getch();
             }

}



//Edita os dados do cliente
void editarCliente(clientes *cliente){

     system ("cls");
    int n,cod,flag=0;
    printf("Escreva o número do cliente que quer editar: ");
    scanf("%d",&cod); fflush(stdin);
    for(n=0; n<NC;n++){
             if (cliente[n].cod_cliente==cod){
                printf("Cliente n. %d \n\n",cliente[n].cod_cliente);
                do{
                                printf("Nome: %s ",cliente[n].nome); gets(cliente[n].nome); fflush(stdin);
                                if (cliente[n].nome[0]=='\0' || cliente[n].nome[0]==' ' || cliente[n].nome[0]=='\n'){
                                          flag=0;
                                          printf("Nome inválido!\n");
                                }else
                                          flag=1;
                } while(flag==0);
                do{
                                 printf("Data de Nascimento: \nDia: "); scanf("%d",&cliente[n].data_nasc.dia);
                                 printf("Mes: "); scanf("%d",&cliente[n].data_nasc.mes);
                                 printf("Ano: "); scanf("%d",&cliente[n].data_nasc.ano);
                                 if(cliente[n].data_nasc.dia>0 && cliente[n].data_nasc.dia<=31 && 
                                    cliente[n].data_nasc.mes>0 && cliente[n].data_nasc.mes<=12 && 
                                    cliente[n].data_nasc.ano>1850 && cliente[n].data_nasc.ano<=2000)
                                                 flag=1;
                                 else{
                                                 flag=0;
                                                 printf("Data de Nascimento Inválida!\n");
                                 }                              
                } while(flag==0);
                do{
                                 printf("Telefone: %ld",cliente[n].telf); scanf("%ld",&cliente[n].telf);  fflush(stdin);
                                 if(cliente[n].telf>900000000 && cliente[n].telf<999999999)
                                                flag=1;
                                 else{
                                                flag=0;
                                                printf("Número de Telf. inválido!\n");
                                 }
                } while(flag==0);
                printf("Morada: %s ",cliente[n].morada); gets(cliente[n].morada);
                system("cls");
                printf("Cliente n. %d alterado com sucesso!\n\n",cliente[n].cod_cliente );
                n=NC;
                flag=1;
                getch();
               }
    } if (flag==0){
       printf("Cliente inválido!");
       getch();
         }

     }
     
//Elimina Cliente
void eliminarCliente(clientes *cliente){
     system ("cls");
    int n,cod,flag=0;
    printf("Escreva o número do cliente que quer eliminar: ");
    scanf("%d",&cod); fflush(stdin);
    for(n=0; n<NC;n++){
             if (cliente[n].cod_cliente==cod){
                cliente[n].estado=0;
                flag=1;
                printf("Cliente eliminado com sucesso!");
                getch();
                n=NC;
             }
     }  if (flag==0)
        printf("Cliente inválido!");   
        getch();

}



