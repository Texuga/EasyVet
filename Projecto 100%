void menu_consultas (clientes *cliente, animais *animal, medicos *medico, consultas *consulta) {
     char op;
  
     
     do{
      system("cls");
      printf("********************************************************************************");
      printf("\n                       Consultas & Marcações\n\n");
      printf("********************************************************************************\n");
      printf("a) Nova Marcação \n");
      printf("b) Modificar Marcação \n");
      printf("c) Consultar Marcação \n");
      printf("d) Listar Todas as Marcações \n");
      printf("e) Eliminar Marcação\n");
      printf("f) Consulta\n");                                 
      printf("v) Voltar ao Menu Anterior \n\n");
      printf("********************************************************************************");
      
      op=toupper(getchar());
      
      
      switch (op) {
             case 'A':       adicionarConsulta(consulta,cliente,animal,medico); break;
             case 'B':       editarConsulta(consulta,cliente,animal,medico);    break;
             case 'C':       listarConsulta(consulta,cliente,animal,medico);    break;
             case 'D':       listarConsultas(consulta,cliente,animal,medico);   break;
             case 'E':       eliminarConsulta(consulta);  break;
             case 'F':       checkin_consulta(consulta,cliente,animal,medico); break;
             case 'V':       return;
             }
      }while(op!='V');
}          
void menu_funcionarios(funcionarios *funcionario){
     char op;
     do{
                                    
        system("cls");
        printf("********************************************************************************");
        printf("\n                     Menu de Conta Funcionarios\n\n");
        printf("********************************************************************************\n");
        printf("a) Adicionar \n");
        printf("b) Eliminar \n");
        printf("c) Listar \n");
        printf("v) Voltar \n\n");
        printf("Nota: Apenas o Admin poderá efectuar estas operações!\n");
        printf("********************************************************************************");
      
      op=toupper(getchar());
      
      switch (op) {
             case 'A': adicionarfuncionario(funcionario); break;
             case 'B':  eliminarFuncionario(funcionario); break;
             case 'C': listarFuncionarios(funcionario); break;
             case 'V': return;
             }
      }while(op!='V');
     
     
}    

void menu_principal (clientes *cliente, medicos *medico, animais *animal, consultas *consulta, funcionarios *funcionario) {
char op;


     do{
        system("cls");
        printf("********************************************************************************");
        printf("\n                            Menu Inicial\n\n");
        printf("********************************************************************************\n");
        printf("a) Clientes \n");
        printf("b) Medicos \n");
        printf("c) Animais \n");
        printf("d) Consultas \n");
        printf("e) Contas Funcionarios\n");
        printf("s) Sair \n\n");
        printf("********************************************************************************");
      
      op=toupper(getchar());
      
      switch (op) {
             case 'A': menu_clientes(cliente); break;
             case 'B': menu_medicos(medico); break;
             case 'C': menu_animais(animal); break;
             case 'D': menu_consultas(cliente,animal,medico,consulta); break;
             case 'E': menu_funcionarios(funcionario); break;
             case 'S': return;
             }
      }while(op!='S');
}
    
//Verificação de acesso ao programa
void acesso(funcionarios *funcionario, clientes *cliente, medicos *medico,animais *animal, consultas *consulta){
     system ("cls");
     char username[10];
     char password[12];
     int n;
     int flag=0;
     
     printf("User: "); gets(username); fflush(stdin);
     printf("\nPassword: "); gets(password); fflush(stdin);
     for(n=0; n<NF;n++){
                            if (!strcmp(funcionario[n].user,username) && !strcmp(funcionario[n].pass,password) && funcionario[n].estado==1){
                               printf("Acesso permitido!");
                               menu_principal(cliente,medico,animal,consulta,funcionario);
                               flag=1;
                                                                                     
                             }
     
     } if (flag==0)
       printf("User ou Password incorrecta!");
       getch();
        
}

main(){
      
       clientes *cliente;
       animais *animal;
       medicos *medico;
       consultas *consulta;
       funcionarios *funcionario;

       cliente=(clientes*) calloc(NC,sizeof(clientes));
       animal=(animais*) calloc(NA,sizeof(animais));
       medico=(medicos*) calloc(NM,sizeof(medicos));
       consulta=(consultas*) calloc(NCO,sizeof(consultas));
       funcionario=(funcionarios*) calloc(NF,sizeof(funcionarios));
       
       inicializacao(cliente,medico,animal,consulta,funcionario);
       carregar_dados(cliente,medico,animal,consulta,funcionario);
       acesso(funcionario, cliente, medico, animal, consulta);
       guardar_dados(cliente,medico,animal,consulta,funcionario);

       }
